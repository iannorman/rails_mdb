<%= form_for @film, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
<p>
	<%= f.label :photo %><br/>
	<%= f.file_field :photo %>
</p>
 <p>
    <%= f.label :rating %><br />
    <%= f.select :rating, (0..5) %>
  </p>


 <p>
    <%= f.label :genre %><br />
    <%= f.select :genre_id, genre_options %>
  </p>
	
  <p><%= f.submit %></p>
<% end %>
